#!/bin/bash

#SBATCH --partition=gpu
#SBATCH --gpus=1
#SBATCH --job-name=ORIG_W2V_ATTNS
#SBATCH --ntasks=1
#SBATCH --time=00:15:00
#SBATCH --output=output/original_results/w2v_attns_%A.out

module purge
module load 2022
module load Anaconda3/2022.05

cd $HOME/ieai-miniproject-context-mixing/
source activate ieai-context-mix

pip install torch
pip install -r requirements.txt

python scoring/attentions.py \
    --MODEL_NAME wav2vec2-large-xlsr-53-french \
    --DIM_AGGREGATOR mean 